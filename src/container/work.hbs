{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
  {{#with main}}
    <main>
        <section>
            {{!-- <div>
              <h2>{{summary.summary_title}}</h2>
            </div> --}}
            {{> title data="Work history" big=true}}
            <div>
              <ul>
                {{#each works}}
                  <li>
                    <div>{{position}}</div>
                       <br>
                    <div>
                         {{duration.from}} - 
                         {{#if duration.to}}
                             {{duration.to}}
                         {{else}}
                             (досі працюємо)
                         {{/if}}                                                     
                    </div>
                       <br>
                    <div>
                      {{!-- {{> link text=company.name href=company.url blank=true noLine=true}} --}}
                         {{#with company}}
                         {{#if url}}
                            {{> link text=name href=company.url blank=true noLine=true}}
                         {{else}}
                            <b>{{name}}</b>
                         {{/if}}
                         {{/with}}                         
                    </div>
                    
                    <br>
                    <br>
                    
                    <div>
                         <strong>Projects ({{projectAmount}})</strong>
                    </div>
                       <br>
                    <ul>
                      {{#each projects}}
                        <li>
                          {{!-- <div>{{name}}</div> --}}
                          <div>{{> link text=name href=url blank=true noLine=true}}</div>
                            <br>
                          <div><p>{{about}}</p></div>
                            <br>
                            <div><em>Project Stacks ({{stackAmount}})</em></div>
                          <section>
                            <ul>
                              {{#each stacks}}
                              <li>
                              {{name}}
                              </li>
                              {{/each}}
                            </ul>
                          </section>
                            <br> 
                            <div><em>Project Awards ({{awardAmount}})</em></div>                            
                           <section>
                            <ul>
                              {{#each awards}}
                              <li>
                              {{name}}
                              </li>
                              {{/each}}
                            </ul>
                          </section>                                                                          
                        </li>
                      {{/each}}
                    </ul>
                  </li>
                        <br>
                {{/each}}               
              </ul>
            </div>
        </section> 
    </main>
  {{/with}}
</div>

