{{!-- 
Це код container файлу для summary сторінки, 
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}

<div>
   {{#with main}}
    <main>
       <section>
            {{!-- {{> title data="All Skills"}} --}}
            {{!-- {{> title data="All Skills"}} --}}
            {{!-- <h2>All Skills</h2> --}}
            {{!-- {{> title data=skills_1.skills_1_title big=true}} --}}
            {{> title data="All Skills" big=true}}

          <ul>
             {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (TOP) {{/if}}

                    {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}
                    
                    {{#unless point}}
                              {{#if point includeZero=true}} 
                                    (зараз вивчаємо)
                              {{/if}}
                    {{/unless}}
                
                </li>
             {{/each}}
             {{!-- <li>{{main.skills.[1]}}</li>
             <li>{{main.skills.[2]}}</li>
             <li>{{main.skills.[3]}}</li> --}}
          </ul>
       </section>

       <section>
            {{!-- {{> title data="All Skills"}} --}}
            {{!-- {{> title data="All Skills"}} --}}
            {{!-- <h2>All Skills</h2> --}}
            {{!-- {{> title data=hobby_title}} --}}
            {{> title data="My Hobbies"}}
           <ol>
             {{#each hobbies}}
                <li>
                    {{name}} 
                    {{#if isMain}}(favorite){{/if}}            
                </li>
             {{/each}}
             {{!-- <li>{{main.skills.[1]}}</li>
             <li>{{main.skills.[2]}}</li>
             <li>{{main.skills.[3]}}</li> --}}
          </ol>
       </section>
    </main>
  {{/with}}
</div>

